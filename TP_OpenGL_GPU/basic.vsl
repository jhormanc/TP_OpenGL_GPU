#version 430

layout(location = 1) uniform mat4x4 mvp;
layout(location = 11) in vec4 pt;
layout(location = 12) in vec3 normal;
layout(location = 13) in vec2 uv;
layout(location = 14) in int num_sampler;

out vec3 normal_out;
out vec2 uv_out;
out int num_texture;

void main()
{
	num_texture = num_sampler;
	uv_out = uv;
	normal_out = normal;
	gl_Position = mvp * pt;
}
